    package="com.example.kappa.assignment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                android:screenOrientation="portrait">
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kappa.assignment.MainActivity"
            android:screenOrientation="portrait">
            android:label="Quiz" >

        </activity>
        <activity
            android:name="com.example.kappa.assignment.Highscore"

            android:label="Highscore" >

        </activity>

        <activity
            android:name="com.example.kappa.assignment.MakeSelfQuest"
            android:screenOrientation="portrait">
            android:label="Make Self Question" >
        </activity>
        <activity
            android:name="com.example.kappa.assignment.PlaySelf"
            android:screenOrientation="portrait">
            android:label="Play Own Question" >

        </activity>
    </application>

</manifest>